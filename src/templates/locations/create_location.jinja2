{% extends "base_logged_in.jinja2" %}
{% block content %}

<div>&nbsp;</div>
<div>&nbsp;</div>
<form method='post'>
    <div class="container">
        <main role="main">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">&nbsp;</div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <a href="{{ url_for('games.admin_schedule') }}" type="button" class="btn btn-primary"><i
                                    class="fas fa-arrow-alt-circle-left"></i> Back
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6 text-center page-title">
                            <h1>Create Location</h1>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <hr/>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="form-group col-md-6 start-date">
                            <label class="col-form-label" for="city"><strong>City</strong></label>
                            <input type="text" name="city" id="city" class="form-control" placeholder="Blacksburg">
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="form-group col-md-6 end-date">
                            <label class="col-form-label" for="state"><strong>State</strong></label>
                            <input type="text" name="state" id="state" class="form-control" placeholder="VA">
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="form-group col-md-6 year-label">
                            <label class="col-form-label" for="zip"><strong>Zip</strong></label>
                            <input type="text" name="zip" id="zip" class="form-control" placeholder="24060">
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <button class='btn btn-outline-success btn-lg float-right' name='save' type='submit'><i
                                    class="fa fa-floppy-o" aria-hidden="true"></i> Save changes
                            </button>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</form>


{% endblock %}