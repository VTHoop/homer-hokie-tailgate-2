{% extends "base_logged_in.jinja2" %}
{% block content %}

<div class="container">
    <form method="post">
        <main role="main">
            <div class="col-12">
                <nav class="nav nav-pills nav-justified">
                    <a class="nav-item nav-link " href="{{ url_for('dashboard.user_dashboard') }}">Dashboard</a>
                    <a class="nav-item nav-link active" href="#">Leaderboard</a>
                </nav>
            </div>
            <div class="row justify-content-center">
                <div class="col-2">
                    <select class="form-control custom-select" name="game_view" id="game_view"
                            onchange="this.form.submit()">
                        {% for gp in games_prior %}
                        <option value="{{ gp._id }}" {% if gp._id== max_game._id %}selected{% endif %}>
                            Week {{ gp.game_num }}
                        </option>
                        {% endfor %}
                    </select>
                </div>
            </div>
                <div class="row">&nbsp;</div>
                <div class="row">
                    <div class="col-12">
                        <table class="table">
                            <colgroup>
                                <col style="width:35%"/>
                                <col style="width:20%"/>
                                <col style="width:20%"/>
                                <col style="width:25%"/>
                            </colgroup>
                            <tr class="text-center">
                                <td>&nbsp;</td>
                                {% if latest_user_games[0].game.away_team.team.school_name == 'Virginia Tech' %}
                                <td>
                                    <img
                                            src="../../static/images/teams/{{ latest_user_games[0].game.away_team.team.logo }}"
                                            style="width:120px"/>
                                </td>
                                <td><img
                                        src="../../static/images/teams/{{ latest_user_games[0].game.home_team.team.logo }}"
                                        style="width:120px"/>
                                </td>
                                {% else %}
                                <td>
                                    <img
                                            src="../../static/images/teams/{{ latest_user_games[0].game.home_team.team.logo }}"
                                            style="width:120px"/>
                                </td>
                                <td><img
                                        src="../../static/images/teams/{{ latest_user_games[0].game.away_team.team.logo }}"
                                        style="width:120px"/>
                                </td>
                                {% endif %}
                                <td>&nbsp;</td>
                            </tr>
                            <tr class="text-center">
                                <td>&nbsp;</td>
                                {% if latest_user_games[0].game.away_team.team.school_name == 'Virginia Tech' %}
                                <td><h2>{{ latest_user_games[0].game.away_score }} </h2></td>
                                <td><h2>{{ latest_user_games[0].game.home_score }} </h2></td>
                                {% else %}
                                <td><h2>{{ latest_user_games[0].game.home_score }} </h2></td>
                                <td><h2>{{ latest_user_games[0].game.away_score }} </h2></td>
                                {% endif %}
                                <td>&nbsp;</td>
                            </tr>
                        </table>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <table class="table table-striped">
                            <colgroup>
                                <col style="width:35%"/>
                                <col style="width:10%; border-left:#000 2px solid;"/>
                                <col style="width:10%"/>
                                <col style="width:10%; border-left:#000 2px solid;"/>
                                <col style="width:10%"/>
                                <col style="width:9%; border-left:#000 2px solid;"/>
                                <col style="width:8%; border-left:#000 2px solid;"/>
                                <col style="width:8%; border-left:#000 2px solid;"/>
                            </colgroup>
                            <thead>
                            <tr class="text-center">
                                <th>Name</th>
                                <th class="vt-predict">Predict</th>
                                <th class="vt-points">Points</th>
                                <th class="oppt-predict">Predict</th>
                                <th class="oppt-points">Points</th>
                                <th class="bonus">Bonus</th>
                                <th class="week-points">Week Total</th>
                                <th class="overall-points">Overall Total</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for l in leaders %}
                            {% set leader_points = points[loop.index0] %}
                            {% for user_game in latest_user_games %}
                            {% if l == user_game.user._id %}
                            <tr class="text-center">
                                <td>{{ user_game.user.f_name }} {{ user_game.user.l_name }}</td>
                                {% if latest_user_games[0].game.away_team.team.school_name == 'Virginia Tech' %}
                                <td class="vt-predict">{{ user_game.away_score }}</td>
                                <td class="vt-points">{{ user_game.away_points }}</td>
                                <td class="oppt-predict">{{ user_game.home_score }}</td>
                                <td class="oppt-points">{{ user_game.home_points }}</td>
                                {% else %}
                                <td class="vt-predict">{{ user_game.home_score }}</td>
                                <td class="vt-points">{{ user_game.home_points }}</td>
                                <td class="oppt-predict">{{ user_game.away_score }}</td>
                                <td class="oppt-points">{{ user_game.away_points }}</td>
                                {% endif %}
                                {% if user_game.admin_enter == 'Yes'
                                or (user_game.home_score == '0' and user_game.away_score == '0')
                                or (user_game.home_score == 0 and user_game.away_score == 0) %}
                                <td class="bonus">0</td>
                                {% else %}
                                <td class="bonus">1</td>
                                {% endif %}
                                <td class="week-points">{{ user_game.total_points }}</td>
                                <td class="overall-points">{{ leader_points }}</td>
                            </tr>
                            {% endif %}
                            {% endfor %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
        </main>
    </form>
</div>

{% endblock %}

