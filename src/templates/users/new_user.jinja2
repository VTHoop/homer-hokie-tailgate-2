{% extends "base_no_nav.jinja2" %}
{% block content %}
<header>
    <nav class="navbar navbar-main">
        <img src="{{ url_for('static', filename='images/hht_logo_flip.png') }}" class="logo">
    </nav>
</header>


<br>
<div class="panel-title text-center">
    <h1>Profile Basics</h1>
</div>
<form method="post" id="newUser">
    <div class="main-register main-center">

        {% if error %}
        <div class="alert alert-danger" role="alert">
            {{ error }}
        </div>
        {% endif %}
        <div class="form-group required">
            <label class="control-label label-text" for="email"><strong>Email</strong></label>
            <div class="input-group">
                        <span class="input-group-addon" id="emailsuccess">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                <input type="email" name="email" id="email" class="form-control" aria-describedby="emailsuccess"
                       placeholder="youremail@domain.com" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6 required">
                <label class="control-label label-text" for="fname"><strong>First Name</strong></label>
                <div class="input-group">
                                <span class="input-group-addon" id="fnamesuccess">
                                    <i class="fa fa-user-circle-o" aria-hidden="true"></i>
                                </span>
                    <input type="text" name="fname" id="fname" class="form-control"
                           aria-describedby="fnamesuccess" placeholder="First Name" required>
                </div>
            </div>
            <div class="form-group col-md-6 required">
                <label class="control-label label-text" for="lname"><strong>Last Name</strong></label>
                <div class="input-group">
                                <span class="input-group-addon" id="lnamesuccess">
                                    <i class="fa fa-user-circle-o" aria-hidden="true"></i>
                                </span>
                    <input type="text" name="lname" id="lname" class="form-control"
                           aria-describedby="lnamesuccess" placeholder="Last Name" required>
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6 required">
                <label class="control-label label-text" for="pword"><strong>Password</strong></label>
                <div class="input-group">
                                <span class="input-group-addon" id="pwordsuccess">
                                    <i class="fa fa-key" aria-hidden="true"></i>
                                </span>
                    <input type="password" name="pword" id="pword" class="form-control" minlength="6"
                           aria-describedby="pwordsuccess" placeholder="Min 6 characters" required>
                </div>
            </div>
            <div class="form-group col-md-6 required">
                <label class="control-label label-text" for="confirmpword"><strong>Confirm Password</strong></label>
                <div class="input-group">
                                <span class="input-group-addon" id="confirmpwordsuccess">
                                    <i class="fa fa-key" aria-hidden="true"></i>
                                </span>
                    <input type="password" name="confirmpword" id="confirmpword" class="form-control"
                           aria-describedby="confirmpwordsuccess" minlength="6"
                           placeholder="Verify the password entered"
                           required>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label label-text" for="phone">Phone (optional)</label>
            <div class="input-group">
                        <span class="input-group-addon" id="phonesuccess">
                            <i class="fa fa-mobile" aria-hidden="true"></i>
                        </span>
                <input type="text" name="phone" id="phone" class="form-control"
                       aria-describedby="phonesuccess"
                       placeholder="Enter if you would like people in your tailgate to quickly text/call about something such as tickets">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label label-text" for="location">Location (optional)</label>
            <div class="input-group">
                        <span class="input-group-addon" id="locationsuccess">
                            <i class="fa fa-map-marker" aria-hidden="true"></i>
                        </span>
                <input type="text" name="location" id="location" class="form-control" aria-describedby="locationsuccess"
                       placeholder="Where are you coming from?, e.g. Richmond, VA; Bourbontown, USA; Deep in Enemy Territory">
            </div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <button class='btn btn-lg btn-full center' name='save' type='submit'><i
                        class="fa fa-floppy-o" aria-hidden="true"></i> Create Account
                </button>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>

</form>

{% endblock %}