{% extends "base_logged_in.jinja2" %}
{% block content %}
<div class="container">
    <main role="main">
        <div class="row">
            <div class="col-md-12">
                <form method='post'>
                    <div class="row">&nbsp;</div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <a href="{{ url_for('users.user_administration') }}" type="button"
                               class="btn btn-primary"><i
                                    class="fas fa-arrow-alt-circle-left"></i> Back
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6 text-center page-title">
                            <h1>Edit User</h1>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="form-group col-md-6">
                            <label class="col-form-label" for="first_name"><strong>First Name</strong></label>
                            <div class="input-group">
                                <input type="text" class="form-control" name="first_name" id="first_name"
                                       value="{{ user.f_name }}">
                            </div>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="form-group col-md-6">
                            <label class="col-form-label" for="last_name"><strong>Last Name</strong></label>
                            <div class="input-group">
                                <input type="text" class="form-control" name="last_name" id="last_name"
                                       value="{{ user.l_name }}">
                            </div>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="form-group col-md-6">
                            <label class="col-form-label" for="email"><strong>Email</strong></label>
                            <div class="input-group">
                                <input type="text" class="form-control" name="email" id="email"
                                       value="{{ user.email }}">
                            </div>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="form-group col-md-6">
                            <label class="col-form-label" for="prognosticator"><strong>Prognosticator</strong></label>
                            <div class="btn-group" data-toggle="buttons">
                                <label class="btn btn-hokie-group btn-sm {% if user.prognosticator == 'Yes' %}active{% endif %}">
                                    {% if user.prognosticator == 'Yes' %}
                                    <input type="radio" name="prognosticator" id="prognosticator" value="Yes"
                                           autocomplete="off"
                                           checked>Yes
                                    {% else %}
                                    <input type="radio" name="prognosticator" id="prognosticator" value="Yes"
                                           autocomplete="off"
                                    >Yes
                                    {% endif %}
                                </label>
                                <label class="btn btn-hokie-group btn-sm {% if user.prognosticator == 'No' %}active{% endif %}">
                                    {% if user.prognosticator == 'No' %}
                                    <input type="radio" name="prognosticator" id="prognosticator" value="No"
                                           autocomplete="off"
                                           checked>No
                                    {% else %}
                                    <input type="radio" name="prognosticator" id="prognosticator" value="No"
                                           autocomplete="off"
                                    >No
                                    {% endif %}
                                </label>
                            </div>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row">

                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <button class='btn btn-outline-success btn-lg' name='save' type='submit'><i
                                    class="fa fa-floppy-o" aria-hidden="true"></i> Save changes
                            </button>
                        </div>
                        <div class="col-md-3"></div>

                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <a href="{{ url_for('users.admin_delete_user', user_id=user._id) }}" type="button"
                               class='btn btn-danger btn-lg float-right'>
                                Delete
                            </a>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>

{% endblock %}