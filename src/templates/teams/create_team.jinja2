{% extends "base_logged_in.jinja2" %}
{% block content %}

<div>&nbsp;</div>
<div>&nbsp;</div>
<form method='post'>
    <div class="container">
        <main role="main">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">&nbsp;</div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <a href="{{ url_for('games.admin_schedule') }}" type="button" class="btn btn-primary"><i
                                    class="fas fa-arrow-alt-circle-left"></i> Back
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6 text-center page-title">
                            <h1>Create Team</h1>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <hr/>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="form-group col-md-6 start-date">
                            <label class="col-form-label" for="school_name"><strong>School Name</strong></label>
                            <input type="text" name="school_name" id="school_name" class="form-control"
                                   placeholder="Virginia Tech">
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="form-group col-md-6 end-date">
                            <label class="col-form-label" for="hokie_sports_name"><strong>Hokie Sports
                                Name</strong></label>
                            <input type="text" name="hokie_sports_name" id="hokie_sports_name" class="form-control"
                                   placeholder="How is this team labeled on hokiesports.com?">
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="form-group col-md-6 year-label">
                            <label class="col-form-label" for="abbrev"><strong>Abbreviation</strong></label>
                            <input type="text" name="abbrev" id="abbrev" class="form-control">
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="form-group col-md-6 year-label">
                            <label class="col-form-label" for="mascot"><strong>Mascot</strong></label>
                            <input type="text" name="mascot" id="mascot" class="form-control">
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="form-group col-md-6 year-label">
                            <label class="col-form-label" for="logo"><strong>Logo File Name</strong></label>
                            <input type="text" name="logo" id="logo" class="form-control"
                                   placeholder="Name of the logo as saved on database">
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="form-group col-md-6 game-location">
                            <label class="col-form-label" for="location"><strong>Location</strong></label>
                            <select class="form-control custom-select" name="location" id="location">
                                {% for l in locations %}
                                <option value="{{ l._id }}">{{ l.city }}, {{ l.state}}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="form-group col-md-6 year-label">
                            <label class="col-form-label" for="stadium"><strong>Stadium Name</strong></label>
                            <input type="text" name="stadium" id="stadium" class="form-control">
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6">
                            <button class='btn btn-outline-success btn-lg float-right' name='save' type='submit'><i
                                    class="fa fa-floppy-o" aria-hidden="true"></i> Save changes
                            </button>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</form>


{% endblock %}